<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<SplitPane dividerPositions="1.0" orientation="VERTICAL" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="in.pratanumandal.pingme.controller.ChatController">
    <items>
        <VBox>
            <children>
                <ScrollPane fx:id="chatScroll" fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="chat" spacing="7.0">
                            <padding>
                                <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
                            </padding>
                        </VBox>
                    </content>
                </ScrollPane>
            </children>
            <padding>
                <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
            </padding>
        </VBox>
        <VBox alignment="TOP_RIGHT" spacing="7.0" SplitPane.resizableWithParent="false">
            <children>
                <TextArea fx:id="message" promptText="Enter your message" VBox.vgrow="ALWAYS" />
                <Button fx:id="send" disable="true" mnemonicParsing="false" onAction="#sendMessage" text="Send" />
            </children>
            <padding>
                <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
            </padding>
        </VBox>
    </items>
</SplitPane>
