<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>
<HBox fx:id="container" styleClass="chat-message" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="in.pratanumandal.pingme.controller.MessageController">
   <children>
      <VBox fx:id="wrapper" spacing="3.0" styleClass="card">
         <children>
            <Label fx:id="sender" styleClass="sender" />
            <TextFlow styleClass="message">
               <children>
                  <Text fx:id="message" strokeType="OUTSIDE" strokeWidth="0.0" />
               </children>
            </TextFlow>
            <HBox alignment="TOP_RIGHT">
               <children>
                  <Label fx:id="timestamp" styleClass="timestamp" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="8.0" />
         </padding>
      </VBox>
   </children>
</HBox>
